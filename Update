import pandas as pd

file_path = 'PDA-bike-store-sales-master/data/'
df = pd.read_excel(file_path)

print(df.head())
total_revenue = df['Revenue'].sum()
print(f"Total Revenue: ${total_revenue}")

total_profit = df['Profit'].sum()
print(f"Total Profit: ${total_profit}")

top_products_by_revenue = df.groupby('Product')['Revenue'].sum().sort_values(ascending=False).head(5)
print("Top 5 Products by Revenue:")
print(top_products_by_revenue)

sales_per_country = df['Country'].value_counts()
print("Number of Sales per Country:")
print(sales_per_country)

avg_order_quantity_per_category = df.groupby('Product_Category')['Order_Quantity'].mean()
print("Average Order Quantity per Product Category:")
print(avg_order_quantity_per_category)

total_profit_per_year = df.groupby('Year')['Profit'].sum()
print("Total Profit per Year:")
print(total_profit_per_year)
